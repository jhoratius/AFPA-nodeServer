<%- include('../../userprofileheader')%>
<div class="ui fitted divider navdivider"></div>
<nav class="navprofile2">
  <div class="user_div">
      <h1>Compte : <%= jwtToken.pseudo %></h1>
  </div>
  <div>
      <li class="head_button"><a class="ui inverted blue button" href="/updateProfile?idUtilisateur=<%= jwtToken.id%>">Modifier son profil</a>
  </div>
</nav>

<%userprofileobj.forEach(function(item){%>
<div class="userdiv1">
    <div class="userdiv2">
        <div class="userdiv3 ui card">
          <div class="content">
            <div class="left floated"><%= item.pseudo%></div>
            <div class="right floated"> <%= item.intitule%> &nbsp</div>
          </div>
          <div class="image">
            <div class="bg_image">
              <img class="ui centered image" src="../../../img/<%- item.image %>">
            </div>
          </div>
          <div class="content">
            <%= item.description%>
            &nbsp <a class="right floated"><i class="th large icon"></i></a>
          </div>
          <div class="extra content">
            <div class="left floated icon">
              <a><i class="heart outline icon"></i></a>
              <%= item.likes%>
            </div>
            <div class="right floated">
              <a class="comment_button">Add Comment...</a>
            </div>
            <div class="right floated">
              <p> 3 commentaires &nbsp</p>
            </div>
            <div>
              <input type="hidden" value="<%= item.idUtilisateur%>">
            </div>
        </div>
    </div>
</div>

<% }) %>
