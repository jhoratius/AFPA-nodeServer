<%- include('../../useheader')%>

  <!-- TITLE -->
  <div class="user_div">
    <h1>Solopost</h1>
  </div>

  <!-- CONTENT  -->
  <div class="userdiv1">
    <div class="userdiv2">
      <div class="userdiv3 ui card">
        <div class="content">
          <div class="left floated">
            <%= solopostobj.pseudo %>
          </div>
          <div class="right floated">
            <%= solopostobj.intitule %>
          </div>
        </div>
        <div class="image">
          <div class="bg_image">
            <img class="ui centered image" src="../../../img/<%= solopostobj.image%>">
          </div>
        </div>
        <div class="content">
          <%= solopostobj.description%>
        </div>
        <div class="extra content">
          <div class="left floated icon">
            <a><i class="heart outline icon"></i></a>
            <%= solopostobj.likes%>
          </div>

  <!-- FORMULAIRE -->
          <form method='post' action='/solopost?idPublication=<%= solopostobj.idPublication%>'>

            <% if(locals.message_err){ %>
            <div class="ui red message">
              <%- message_err %>
            </div>
            <% } %>

            <% if(locals.message){ %>
            <div class="ui green message">
              <%- message %>
            </div>
            <% } %>

        </div>
            <div>
              <input type='hidden' name='idPub' value=<%= solopostobj.idPublication%>>
              <div class="comment_div">

                <div class="comment_textarea">
                  <textarea name='contenu'></textarea>
                </div>

                <div class="comment_sub_button">
                  <button class="ui primary button" type='submit'>Submit</button>
                </div>
                
              </div>
            </div>
          </form>

      </div>
    </div>
  </div>
  <!-- <a href='/com'><button class="ui button primary"><i class="download icon"></i>Ajouter un commentaire</button></a> -->
  <%- include('../../footer')%>